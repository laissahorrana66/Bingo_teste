import random
import time

# 1. Cria a lista de todos os n√∫meros dispon√≠veis (de 1 a 100)
numeros_para_sorteio = list(range(1, 101))

# 2. Embaralha a lista para definir a ordem aleat√≥ria do sorteio
random.shuffle(numeros_para_sorteio)

# Lista para armazenar os n√∫meros j√° sorteados
numeros_sorteados = []

def sortear_proximo_numero():
    """Simula o sorteio do pr√≥ximo n√∫mero da lista embaralhada."""
    if numeros_para_sorteio:
        # Pega e remove o primeiro n√∫mero da lista (que j√° est√° em ordem aleat√≥ria)
        numero_sorteado = numeros_para_sorteio.pop(0)
        numeros_sorteados.append(numero_sorteado)
        return numero_sorteado
    else:
        return None

def iniciar_bingo():
    """Fun√ß√£o principal para executar a simula√ß√£o do bingo."""
    print("‚ú® BEM-VINDO AO SORTEIO DE BINGO (1 a 100) ‚ú®")
    print(f"Total de n√∫meros a sortear: {len(numeros_para_sorteio)}")
    print("-" * 35)

    while numeros_para_sorteio:
        # Sorteia o pr√≥ximo n√∫mero
        numero = sortear_proximo_numero()

        # Verifica se ainda h√° n√∫meros para sortear
        if numero is not None:
            print(f"N√∫mero sorteado: **{numero}**")
            print(f"N√∫meros j√° sorteados: {numeros_sorteados}")
            print("-" * 35)

            # Pausa para simular o tempo de um sorteio real
            # Voc√™ pode comentar a linha abaixo se quiser um sorteio r√°pido
            time.sleep(1) # Pausa de 1 segundo

            # Opcional: Pausa e espera por um comando do usu√°rio para continuar
            # input("Pressione ENTER para sortear o pr√≥ximo n√∫mero...")
        else:
            break

    print("üéâ FIM DO SORTEIO! Todos os 100 n√∫meros foram chamados. üéâ")
    print(f"Ordem final do sorteio: {numeros_sorteados}")

# Executa a fun√ß√£o principal
if __name__ == "__main__":
    iniciar_bingo()
